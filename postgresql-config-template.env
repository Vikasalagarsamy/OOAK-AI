# ðŸš€ PostgreSQL Configuration for OOAK-FUTURE
# Phase 2 Migration - All JavaScript Scripts now use these variables

# === LOCAL POSTGRESQL CONFIGURATION ===
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DATABASE=ooak_future
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password
POSTGRES_SSL=false

# === PRODUCTION POSTGRESQL CONFIGURATION ===
POSTGRES_PROD_HOST=your-prod-host
POSTGRES_PROD_PORT=5432
POSTGRES_PROD_DATABASE=ooak_future_prod
POSTGRES_PROD_USER=postgres
POSTGRES_PROD_PASSWORD=your-prod-password
POSTGRES_PROD_SSL=true

# === REMOTE POSTGRESQL (FOR MIGRATION) ===
POSTGRES_REMOTE_HOST=remote-migration-host
POSTGRES_REMOTE_PORT=5432
POSTGRES_REMOTE_DATABASE=ooak_future
POSTGRES_REMOTE_USER=postgres
POSTGRES_REMOTE_PASSWORD=remote-password
POSTGRES_REMOTE_SSL=true

# === DATABASE ENVIRONMENT SWITCHER ===
# Options: local, docker, production
DB_ENVIRONMENT=local

# === CONNECTION POOL SETTINGS ===
POSTGRES_MAX_CONNECTIONS=20
POSTGRES_IDLE_TIMEOUT=30000
POSTGRES_CONNECTION_TIMEOUT=2000

# === MIGRATION SETTINGS ===
ENABLE_MIGRATION_LOGGING=true
BACKUP_BEFORE_MIGRATION=true
MIGRATION_BATCH_SIZE=1000

# === APPLICATION SETTINGS ===
NODE_ENV=development
LOG_LEVEL=info

