import { NextRequest, NextResponse } from 'next/server'
import { createServerClient } from '@/lib/supabase/server'
import { getCurrentUser } from '@/actions/auth-actions'

// GET /api/tasks - Fetch AI tasks with simplified role-based filtering
export async function GET(request: NextRequest) {
  try {
    // Use service role client (bypasses JWT validation issues)
    const supabase = createServerClient()
    
    // Get current user using our working auth system
    console.log('ğŸ” Starting getCurrentUser...')
    let currentUser
    try {
      currentUser = await getCurrentUser()
      console.log('ğŸ” getCurrentUser result:', currentUser ? `${currentUser.username} (${currentUser.roleName})` : 'null')
    } catch (authError: any) {
      console.error('âŒ getCurrentUser failed:', authError)
      return NextResponse.json(
        { error: 'Authentication failed', details: authError.message },
        { status: 401 }
      )
    }
    
    if (!currentUser) {
      console.log('âŒ No current user found')
      return NextResponse.json(
        { error: 'Unauthorized access' },
        { status: 401 }
      )
    }
    
    console.log(`ğŸ” Tasks request from user: ${currentUser.username}, role: ${currentUser.roleName}, employeeId: ${currentUser.employeeId}`)
    
    // Simplified query - start with basic task selection
    let query = supabase
      .from('ai_tasks')
      .select('*')
      .order('created_at', { ascending: false })
      .limit(50)
    
    // Check for personal scope query parameter
    const url = new URL(request.url)
    const scope = url.searchParams.get('scope')

    if (scope === 'personal') {
      // Personal scope: only show tasks assigned to the current user
      if (currentUser.employeeId) {
        query = query.eq('assigned_to_employee_id', currentUser.employeeId)
        console.log(`ğŸ” [Personal Scope] Tasks for employee ID: ${currentUser.employeeId}`)
      } else {
        console.log('ğŸ” [Personal Scope] No employee ID, returning empty result')
        return NextResponse.json([])
      }
    } else {
      // Simplified role-based access control
      if (currentUser.isAdmin || currentUser.roleName === 'Administrator') {
        // Admins see all tasks - no additional filtering
        console.log('ğŸ” Admin access - showing all tasks')
      } else if (currentUser.roleName?.includes('Manager') || currentUser.roleName?.includes('Head')) {
        // Managers and Heads see all tasks (simplified for now)
        console.log('ğŸ” Manager/Head access - showing all tasks')
      } else {
        // Regular employees only see their assigned tasks
        if (currentUser.employeeId) {
          query = query.eq('assigned_to_employee_id', currentUser.employeeId)
          console.log(`ğŸ” Employee access - tasks for employee ID: ${currentUser.employeeId}`)
        } else {
          console.log('ğŸ” No employee ID, returning empty result')
          return NextResponse.json([])
        }
      }
    }
    
    console.log('ğŸ” Executing database query...')
    const { data: tasks, error: tasksError } = await query

    if (tasksError) {
      console.error('âŒ Error fetching AI tasks:', tasksError)
      return NextResponse.json(
        { error: 'Failed to fetch tasks', details: tasksError.message },
        { status: 500 }
      )
    }

    console.log(`ğŸ” Database returned ${tasks?.length || 0} tasks`)

    // Simplified response - return tasks directly for now
    // You can add lead and quotation data later if needed
    return NextResponse.json(tasks || [])

    } catch (error: any) {
    console.error('âŒ Unexpected error in tasks API:', error)
    return NextResponse.json(
      { error: 'Internal server error', details: error.message },
      { status: 500 }
    )
  }
} 