    console.log('ğŸ” Discovering tables...\n')
    
    for (const tableName of tablesToCheck) {
      try {
        const { data, error } = await supabase
          .from(tableName)
          .select('*')
          .limit(1)
        
        if (!error) {
          foundTables.push(tableName)
          console.log(`âœ… ${tableName}`)
        } else {
