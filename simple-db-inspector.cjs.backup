              console.log(`     Client: ${row.client_name || 'N/A'}`)
              console.log(`     Status: ${row.status || 'N/A'}`)
              console.log(`     Assigned To: ${row.assigned_to || 'Unassigned'}`)
            } else if (tableName === 'branches') {
